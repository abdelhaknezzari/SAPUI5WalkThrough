<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="na.myProject2.controller.HelloPanel"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Shell>
		<App class="myAppDemoWT">
			<pages>
				<Page title="{i18n>homePageTitle}">
					<content>
						<Panel headerText="{i18n>helloPanelTitle}" class="sapUiResponsiveMargin" width="auto">
							<content>
								<Button id="helloDialogButton" text="{i18n>openDialogHelloButton}" press=".onOpenDialog" class="sapUiSmallMarginEnd" icon="sap-icon://world"/>
								<Button text="{i18n>showHellowButtonText}" press=".onShowHello" class="myCustomButton"/>
								<Input value="{recipient/name}" description="Hello {recipient/name}" valueLiveUpdate="true" width="30%"/>
								<FormattedText htmlText="Hello{recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
							</content>
						</Panel>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>